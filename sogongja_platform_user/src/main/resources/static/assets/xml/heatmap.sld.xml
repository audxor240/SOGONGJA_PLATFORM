<?xml version="1.0" encoding="ISO-8859-1"?>
<StyledLayerDescriptor version="1.0.0"
                       xsi:schemaLocation="http://www.opengis.net/sld"
                       xmlns:xlink="http://www.w3.org/1999/xlink"
                       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <NamedLayer>
        <Name>Two color gradient</Name>
        <UserStyle>
            <Title>SLD Cook Book: Two color gradient</Title>
            <FeatureTypeStyle>
                <Rule>
                    <RasterSymbolizer>
                        <ColorMap>
                            <ColorMapEntry color="#FFFFFF" quantity="0" opacity="0"/>
                            <ColorMapEntry color="#4444FF" quantity="0.1" opacity="0.3"/>
                            <ColorMapEntry color="#FF0000" quantity="0.5" opacity="0.3"/>
                            <ColorMapEntry color="#FFFF00" quantity="1.0" opacity="0.3"/>
                        </ColorMap>
                    </RasterSymbolizer>
                </Rule>
            </FeatureTypeStyle>
        </UserStyle>
    </NamedLayer>
</StyledLayerDescriptor>